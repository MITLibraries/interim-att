{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "python"
      ],
      "allowedVersions": "<3.13"
    },
    {
      "matchPackageNames": [
        "!python",
        "*"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "pin",
        "pinDigest",
        "digest",
        "bump",
        "replacement"
      ]
    }
  ]
}
